<h2 class ="form-text">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "form-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
  </div>

  <div class="field">
  <%= f.label :first_name, class: "form-text" %><br />
  <%= f.text_field :first_name, class: "form" %>
</div>

  <div class="field">
    <%= f.label :password, class: "form-text" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"(6 characters minimum)", class: "form" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form-text" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button" %>
  </div>
<% end %>

<div class= "button-fix">
  <%= render "devise/shared/links" %>
</div>